<% include ./partials/_header %>
<body style="font-size:20px; padding:50px;">
  <h1>Tiny App</h1>
    <a href='/urls/new'>Create New URL</a>
  <h3>My URLs:</h3>
  <% if (urls) { %>
    <% for (let key in urls) { -%>
      <li>
        <%= key  %> => <%= urls[key] %>
        <form method="POST" action="/urls/<%= key %>/delete">
          <button type="submit" class="btn btn-primary">Delete</button>
        </form>
      </li>
    <% } -%>
  <% } %>

</body>
</html>